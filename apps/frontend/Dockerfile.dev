# Development Dockerfile
FROM node:20-alpine

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Install development tools
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy only package files first (for better layer caching)
# This layer will be cached unless package.json or pnpm-lock.yaml changes
COPY pnpm-workspace.yaml package.json pnpm-lock.yaml ./
COPY packages/prisma/package.json ./packages/prisma/
COPY packages/shared/package.json ./packages/shared/
COPY apps/backend/package.json ./apps/backend/
COPY apps/frontend/package.json ./apps/frontend/

# Install all dependencies (including dev)
# This step will be cached unless dependencies change
RUN pnpm install --frozen-lockfile

# Now copy the rest of the files (source code, etc.)
# This layer will be rebuilt on code changes, but dependencies stay cached
COPY packages ./packages
COPY apps/frontend ./apps/frontend

# Copy startup script (won't be overwritten by volume mount)
COPY scripts/docker-dev-frontend.sh /app/docker-dev-frontend.sh
RUN chmod +x /app/docker-dev-frontend.sh

# Expose port
EXPOSE 3000

# Start in development mode using startup script
# Use shell form to execute the script properly
WORKDIR /app
CMD ["/bin/sh", "/app/docker-dev-frontend.sh"]

