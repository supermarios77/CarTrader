# Database Configuration
POSTGRES_USER=cartrader
POSTGRES_PASSWORD=change_this_strong_password
POSTGRES_DB=cartrader
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password
REDIS_PORT=6379

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_minio_password
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Application Configuration
NODE_ENV=production
JWT_SECRET=change_this_jwt_secret_min_32_characters_long

# Frontend/Backend URLs
# Use localhost for local development, or your VPS IP for production
# Examples:
#   Local: http://localhost:3000
#   VPS IP: http://YOUR_VPS_IP:3000
#   Domain (if you have one): https://yourdomain.com
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Domain (OPTIONAL - only if you have a domain and want SSL)
# Leave as-is if using localhost or VPS IP
DOMAIN=yourdomain.com
